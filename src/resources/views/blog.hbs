<div class="container bg">
    <div class="row pt-5">
        <div class="content col-lg-11 col-md-10 col-9 text-center">
            <h3 class="ms-5 ps-5 fw-bold" style="color: #fd0054;">BLOGS & ARTICLES</h3>
            <p class="ms-5 ps-5 fw-medium">OUR RECENT ARTICLES</p>
        </div>
        <button type="button"
            class="btn btn-danger mt-1 border rounded-pill "
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
            style="width: 100px;height:50px;">
            New Post
        </button>
    </div>
    <div class="row row-cols-1 row-cols-lg-3 row-cols-md-2 g-4 pt-4">
        {{#each blogs}}
        <div class="col pb-3">
            <div class="card">
                <a href="blog/blogDetail/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" style="height: 300px;" alt="...">
                </a>
                <div class="card-body pb-0">
                    <h5 class="card-title">{{this.title}}</h5>
                    <div class=" col-lg-8 d-flex justify-content-start">
                        <img class="col-lg-4 col-1 my-2" style="width: 30px; height: 30px" src="/img/Image.png" alt>
                        <p class="m-0 d-flex align-items-center mx-2" style="font-size:medium;">Benjamin Gray</p>
                    </div>
                    <p class="content-text-blog">{{this.content}}</p>
                    <div class="d-flex justify-content-between">
                        <p class="card-text" style="font-size:14px;">FEB 12, 2020</p>
                        <p class="card-text ">
                            <a href="/blog/blogDetail/{{this.slug}}" class="text-danger fw-medium fw-semibold"
                                style="text-decoration: none">MORE
                                INFO</a>
                            <img class="pb-1" src="/img/goRight.png" alt="">
                        </p>
                    </div>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="modal fade " id="exampleModal" tabindex="-1"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content col-md-10"
                    style="border-radius: 20px 20px 20px 20px;">
                    <div
                        class="modal-header d-flex justify-content-center"
                        style="background-color: rgba(193, 200, 206, 1)!important; border-radius: 20px 20px 0 0;">
                        <h5 class="modal-title"
                            id="exampleModalLabel">What's your mind
                            ?</h5>
                        <button type="button" class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body ">
                        <label for="name"><b>Your Name</b></label>
                        <input class="form-control" name="name"
                            id="name"
                            style="border-radius:10px">
                        <label for="title"><b>Title</b></label>
                        <input class="form-control" name="title"
                            id="title"
                            style="border-radius:10px">

                        <label for="content"><b>Content</b></label>
                        <textarea class="col-12" name="content"
                            id="content"
                            rows="8"
                            style="border-radius:10px;"
                            placeholder="Type what in your mind ..."></textarea>
                        <div id="uploadImg">
                            <label
                                class="col-12 btn btn-outline-secondary">Upload
                                your image
                                <i class="fa-solid fa-upload"></i>
                                <input type="file"
                                    class="custom-file-input"
                                    name="upload" id="fileInput"
                                    style="display:none;">
                            </label>
                        </div>
                        <center><p id="uploading_text"></p></center>
                        <!-- <center>
                                <img class="col-5 mt-2 mb-3 ms-3" src
                                    alt="Selected Image"
                                    id="selectedImage"
                                    style="max-width: 250px;display: none;max-height:100%;">
                            </center> -->
                    </div>
                    <div
                        class="modal-footer d-flex justify-content-center border"
                        style="border-radius: 0 0 20px 20px;">
                        <button type="button" class="btn btn-danger"
                            style="width: 200px;"
                            data-bs-dismiss="modal"
                            aria-label="Close">Cancel</button>
                        <button type="button" class="btn btn-primary "
                            style="width: 200px;">Post</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const fileInput = document.getElementById('fileInput');

const cloud_name = "duas1juqs";
const upload_preset = "pnvimage";

fileInput.addEventListener("change", (e) => {
    uploading_text.innerText = "Uploading ...";
    document.getElementById('uploadImg').style.display = 'none';
    const file = e.target.files[0];
    const formData = new FormData();
    formData.append("file", file);
    formData.append("upload_preset", upload_preset);
    const options = {
        method: "POST",
        body: formData,
    };
    return fetch(
        `https:api.cloudinary.com/v1_1/${cloud_name}/image/upload`,
        options
    )
        .then((res) => res.json())
        .then((data) => {
            console.log(data.secure_url);
            document.getElementById('uploadImg').style.display = 'block';
            uploading_text.innerHTML = `
            <center>
            <br />
            <img style="max-width:300px" src="${data.secure_url}" alt="">
            <a href="${data.secure_url}">${data.secure_url}</a>
            </center>`;
        })
        .catch((err) => console.log(err));
});
</script>