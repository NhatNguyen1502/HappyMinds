<div class="container bg pt-4 pb-2">
  <h2 class="d-flex justify-content-center pb-4">Suggested <span
      class="text-danger d-flex" style="white-space: pre;"> Calorie </span>
    Content of Each Dish</h2>

  <div class="row d-flex justify-content-center pb-2">
    <div class="col-lg-6">
      <div class="input-group mb-3" style="width: 600px;">
        <input type="text" class="form-control form-input rounded-star"
          placeholder="Search Food ..." style="height: 55px;border-radius:15px 0px 0px 15px;">
        <div class="input-group-append">
          <button class="btn bg-white" type="button" onclick="findSearch()"
            style="height: 53px;border-radius:0px 15px 15px 0px;margin-top:1px">
            <i class="bi bi-search"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
  {{#each foods}}
  <div class="card card-content mb-3 rounded-4">
    <div class="row g-0 justify-content-start">
      <div class="col-lg-2 d-flex justify-content-center justify-content-lg-start align-items-center text-center">
    <div class="custom-image " style="width: 200px;height: 150px; overflow: hidden;">
        <img src="{{this.img}}" class="img-fluid rounded-image mx-3 mt-2" alt="error" style="width: 200px;height: 150px; overflow: hidden;">
    </div>
</div>

      <div class="col-lg-6">
        <div class="card-body card-body-text px-0 text-center text-lg-start ">
          <h5 class="card-title">{{this.name}}</h5>
          {{!-- <p class="card-text">{{this.description}}</p> --}}
          <p class="card-text"><medium class="text-body-secondary">{{this.calo}}
              calo</medium></p>
        </div>
      </div>
      <div
        class="col-lg-4 d-flex justify-content-center align-items-center pb-lg-0 pb-3">
        <button type="button"
          class="btn btn-custom text-light bg-danger w-50 fw-medium rounded-3">Add to Menu</button>
      </div>
    </div>
  </div>
  {{/each}}
</div>