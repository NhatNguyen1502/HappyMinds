<div class="container">
    <div class="inforUser p-2 m-3 row rounded-2">
        <div class="col-md-6">
            <h1 class="m-0 mb-2" style="color: $red; font-weight: 700;">YOUR BMI: 20.9</h1>
            <div class="showInput row gap-2">
                <h2 id="recommendationText"></h2>
            </div>
        </div>
        <div class="col-md-6 p-2">
            <h2 class="d-flex justify-content-end" style="font-weight: 700;" id="userName">NGUYỄN ĐỨC QUYỀN</h2>
            <h2 class="d-flex justify-content-end" style="font-weight: 700;" id="userAge">19</h2>
            <h2 class="d-flex justify-content-end" style="font-weight: 700;" id="activityRatios">VERY ACTIVE</h2>
        </div>
    </div>

    <form action="" method="get">
        <div class="formArea updateForm row p-0 m-3 justify-content-between">
            <h2 class="mt-2 text-center" style="color: $red; font-weight: 700;"> Update</h2>
            <div class="form col-md-6 border-end text-center mb-2 rounded-start">
                <div for="height" style="font-size: 15px; font-weight: 600;">Height</div>
                <input type="text" class=" col-md-8 col-11 p-2 m-1 border-0 rounded-2" id="heightForm">

                <div for="weight" style="font-size: 15px; font-weight: 600;">Weight</div>
                <input type="text" class=" col-md-8 col-11 p-2 m-1 border-0 rounded-2" id="weightForm">
            </div>
            <div class="inforForm form col-md-6 text-center mb-2  rounded-end">
                <div for="height" style="font-size: 15px; font-weight: 600;">Age</div>
                <input type="number" class=" col-md-8 col-11 p-2 m-1 border-0 rounded-2" id="ageForm"><br>

                <div for="height" style="font-size: 15px; font-weight: 600;">Physical Activity Level (PAL).</div>
                <input type="text" class=" col-md-8 col-11 p-2 m-1 border-0 rounded-2" id="levelForm"><br>
            </div>
            <div class="m-2 text-center">
                <input type="submit" class="button col-md-3 p-2 m-1 border-0 rounded-5" value="Update">
            </div>
        </div>
    </form>
    <div class="foodHistory p-3 m-3 rounded-2">
        <h3 class="m-0 mb-2" style="color: $red; font-weight: 700;">Food Menu</h3>
        <div class="card card-content mb-3">
            <div class="row g-0 justify-content-start">
                <div class="col-lg-2 d-flex justify-content-center justify-content-lg-start align-items-center text-center">
                    <img src="https://anestisxasapotaverna.gr/wp-content/uploads/2021/12/ARTICLE-1.jpg"
                        class="img-fluid rounded-image mx-3 w-100" alt="error">
                </div>
                <div class="col-lg-6">
                    <div class="card-body card-body-text px-0 text-center text-lg-start">
                        <h5 class="card-title">France's Pizza</h5>
                        <p class="card-text">Pizza are very good for your health</p>
                        <p class="card-text"><small class="text-body-secondary">350 calo</small></p>
                    </div>
                </div>
                <div class="col-lg-4 d-flex justify-content-center align-items-center  pb-lg-0 pb-3">
                    <button type="button" class="border-0 py-2 btn-custom text-light w-50 rounded-2">Remove</button>
                </div>
            </div>
        </div>
    </div>
    <div class="videoHistory p-3 m-3 rounded-1">
        <h3 class="m-0 mb-2" style="color: $red; font-weight: 700;">Watched History</h3>
        <div class="card card-content mb-3">
            <div class="row g-0 justify-content-start">
                <div class="col-lg-3 p-3 d-flex justify-content-center justify-content-lg-start align-items-center text-center">
                    <img src="https://anestisxasapotaverna.gr/wp-content/uploads/2021/12/ARTICLE-1.jpg"
                        class="mx-1 w-100" alt="error">
                </div>
                <div class="col-lg-4">
                    <div class="card-body card-body-text px-0 text-center text-lg-start">
                        <h5 class="card-title">France's Pizza</h5>
                        <p class="card-text">Pizza are very good for your health</p>
                        <p class="card-text"><small class="text-body-secondary">350 calo</small></p>
                    </div>
                </div>

                <div class="col-lg-4 d-flex justify-content-lg-end justify-content-center align-items-center  pb-lg-0 pb-3">
                    <button type="button" class="border-0 py-2 btn-custom text-light w-50 rounded-2">Watch</button>
                </div>

            </div>
        </div>
    </div>
</div>


